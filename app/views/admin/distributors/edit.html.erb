<%= hook :admin_distributor_edit_form_header do %>
  <h1><%= t("editing_distributor") %></h1>
<% end %>

<%= hook :admin_distributor_edit_form do %>
  <%= form_for [:admin, @distributor], :html => { :class => "distributor-form" } do |f| %>
